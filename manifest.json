{
  "manifest_version": 3,
  "name": "Auto Bid ComprasNet",
  "version": "1.0",
  "description": "Extens√£o para automatizar lances no ComprasNet.",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.comprasnet.gov.br/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
